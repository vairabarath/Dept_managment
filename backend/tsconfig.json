{
  "compilerOptions": {
    "target": "ES2020", // Use ES2020 features (you can adjust based on your needs)
    "module": "commonjs", // Use CommonJS module system
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allow compatibility with CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Output compiled files to 'dist' folder
    "rootDir": "./src", // The root directory for TypeScript files
    "moduleResolution": "node", // Resolve modules in the same way as Node.js
    "resolveJsonModule": true // Allow importing JSON files
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in the 'src' folder
  "exclude": ["node_modules"] // Exclude 'node_modules' folder
}
